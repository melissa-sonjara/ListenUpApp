<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/listen_up_about"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="20dp"
            android:text="@string/about_listenup"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/about_bottom_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_title_image" />

        <Button
            android:id="@+id/dismiss_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@android:string/ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.213"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/go_to_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Go to Website"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintStart_toEndOf="@+id/dismiss_about" />

        <ImageView
            android:id="@+id/about_bottom_image"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_marginBottom="26dp"
            android:src="@drawable/women"
            app:layout_constraintBottom_toTopOf="@+id/dismiss_about"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/about_title_image"
            android:layout_width="252dp"
            android:layout_height="68dp"
            android:layout_marginBottom="406dp"
            android:src="@drawable/logo_listen_up"
            app:layout_constraintBottom_toTopOf="@+id/about_bottom_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>