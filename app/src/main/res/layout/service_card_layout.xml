<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/evidence_card_row"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/service_image"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toStartOf="@+id/evidence_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_listenup_logo" />

    <TextView
        android:id="@+id/evidence_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/service_checkbox"
        app:layout_constraintEnd_toStartOf="@+id/service_checkbox"
        app:layout_constraintStart_toEndOf="@+id/service_image" />

    <CheckBox
        android:id="@+id/service_checkbox"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/evidence_name"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>